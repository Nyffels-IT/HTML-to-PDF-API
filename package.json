{
  "name": "@nyffels/html-to-pdf",
  "description": "A docker server with Swagger API implemented to convert HTML code to PDF document.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
	"repository": {
		"type": "git",
		"url": "https://github.com/Nyffels-IT/HTML-to-PDF-Docker-Swagger-API",
		"homepage": "https://github.com/Nyffels-IT/HTML-to-PDF-Docker-Swagger-API"
	},
	"bugs": {
		"url": "https://github.com/RyanTheAllmighty/Docker-Hub-API/issues",
		"email": "chesney@nyffels.be"
	},
  "keywords": [],
  "author": {
    "name": "Chesney Nyffels",
    "email": "chesney@nyffels.be",
    "url": "http://nyffels.be"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "puppeteer": "^21.5.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  }
}
